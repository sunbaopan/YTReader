    <!-- 设置系统字体结束 -->
    <!-- 恢复出厂设置开始 -->

    <LinearLayout
        android:id="@+id/recovery"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/settingsproinforheight" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/settingsproimagepaddleft"
                android:paddingTop="@dimen/settingsproinforimagepaddtopv"
                android:src="@drawable/recovery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/settingsproextpaddleft"
                android:paddingTop="@dimen/settingsprotextpaddtop"
                android:text="@string/recovery"
                android:textColor="@android:color/black"
                android:textSize="@dimen/settingsprotextsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/settingsprorpaddleft"
                android:paddingTop="@dimen/settingsprorpaddtop"
                android:src="@drawable/s_arror_r" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dotted_line_h_0" >
    </LinearLayout>

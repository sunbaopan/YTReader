<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ss"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!-- 头部开始 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bctopblankllheight" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bctopllheight"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/iconbooksimagepaddleft"
                android:paddingTop="@dimen/iconbooksimagepaddtop"
                android:src="@drawable/icon_books" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/ebookcasetextpaddleft"
                android:paddingTop="@dimen/ebookcasetextpaddtop"
                android:text="@string/ebookcase"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ebookcasetextsize" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/searchselector" />

            <TextView
                android:layout_width="@dimen/searchmidblanktext"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/bookcaseBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thick_line_h" >
    </LinearLayout>
    <!-- 头部结束 -->


    <!-- 下拉列表开始 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bclisttopblankllheight" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bclistllheight"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="@dimen/showtypeleftblankwidth"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/showtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bookcheck"
                android:paddingLeft="@dimen/showtypepaddleft"
                android:paddingTop="@dimen/showtypepaddtop"
                android:textColor="@android:color/black" >
            </TextView>

            <TextView
                android:layout_width="@dimen/showtypemiddwith"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/arrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bookcheck"
                android:paddingLeft="@dimen/arrangepaddleft"
                android:paddingTop="@dimen/arrangepaddtop"
                android:textColor="@android:color/black" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/phonesel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phoneselector" />

                <TextView
                    android:layout_width="@dimen/phoneselmidblank"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/sdsel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sdselector" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 下拉列表结束 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/allbooksllheight" >

        <TextView
            android:id="@+id/allbooks"
            android:layout_width="@dimen/allbookswidth"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/allbookspaddleft"
            android:paddingTop="@dimen/allbookspaddtop"
            android:text="@string/allbooks"
            android:textColor="@android:color/black"
            android:textSize="@dimen/allbookstextsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/soild_line_v" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/uplevelLL"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/uplevelllheight"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/uplevelinnerheight"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/uplevel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/uplevelimageheight"
                android:paddingLeft="@dimen/uplevelimagepaddleft"
                android:src="@drawable/uplevel" />
            
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/upleveltextpaddleft"
                android:paddingTop="@dimen/upleveltextpaddtop"
                android:text="@string/upperLevel"
                android:textColor="@android:color/black"
                android:textSize="@dimen/upleveltextsize" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted_line_h_0" />
    </LinearLayout>
    <!-- 书籍列表开始 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/booklistheight" >

        <ListView
            android:id="@+id/booklist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null" >
        </ListView>
    </LinearLayout>
    <!-- 书籍列表结束 -->
    <!-- 底部分页开始 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bcbottomheight" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal" >

            <ImageButton
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/bcbottomlefttop"
                android:src="@drawable/arrow_1" />

            <TextView
                android:layout_width="@dimen/bcbottomleftmidblank"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page"
                android:textColor="@android:color/black"
                android:textSize="@dimen/bcbottomtextsize" />

            <TextView
                android:layout_width="@dimen/bcbottompagemidblank"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/currentPageCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/bcbottomtextsize" />

            <TextView
                android:layout_width="@dimen/bcbottompagemidblank"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/of"
                android:textColor="@android:color/black"
                android:textSize="@dimen/bcbottomtextsize" />

            <TextView
                android:layout_width="@dimen/bcbottompagemidblank"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/totalPageCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/bcbottomtextsize" />

            <TextView
                android:layout_width="@dimen/bcbottomleftmidblank"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/bcbottomlefttop"
                android:src="@drawable/arrow_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/bcdeleteimagepaddleft"
                android:src="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>
    <!-- 底部分页结束 -->

</LinearLayout>